<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_native_json_prase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhs.mycode.json.activity.NativeJsonPraseActivity">

    <!---->
    <include layout="@layout/titlebar" />

    <!--四个button-->
    <Button
        android:id="@+id/btn_native_tojavaobject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="将JSON对象转换为java对象"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_native_tojavalist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="将JSON数据转换为java集合"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_native_complex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="复杂JSON数据解析"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_native_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="特殊JSON数据解析"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始数据"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/tv_native_orignal"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转换后的数据"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/tv_native_last"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
